@model WebApplication4.Data.Course

@{
    ViewData["Title"] = "Create";
}

<h1>Створити курс</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Назва
                @* <label asp-for="Title" class="control-label"></label> *@
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="error-text"></span>
            </div>
            
            <div class="form-group">
                Опис
@*                 <label asp-for="Description" class="control-label"></label> *@
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="error-text"></span>
            </div>
            <div class="form-group">
                Рівень складності
               @*  <label asp-for="DifficultyLevelId" class="control-label"></label> *@
                <select asp-for="DifficultyLevelId" class ="form-control" asp-items="ViewBag.DifficultyLevelId"></select>
            </div>
            <div class="form-group">
                Категорія
               @*  <label asp-for="CategoryId" class="control-label"></label> *@
                <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>

            <div class="form-group">
                Викладач
                @* <label asp-for="TeachersId" class="control-label"></label> *@
                <select asp-for="TeachersId" class ="form-control" asp-items="ViewBag.TeachersId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="button-19" />
            </div>
        </form>
    </div>
</div>

<div class="button-19">
    <a class="button-19" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<style>
    .error-text {
    color:red;
    }

</style>